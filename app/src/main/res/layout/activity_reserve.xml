<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReserveActivity">

    <Button
        android:id="@+id/backupSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doBackupAction"
        android:text="@string/backup"
        app:layout_constraintBottom_toTopOf="@+id/restoreSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restoreSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doBackupAction"
        android:text="@string/restore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupSettings" />
</androidx.constraintlayout.widget.ConstraintLayout>